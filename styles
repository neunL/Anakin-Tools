body {
    background-color: black;
    margin: 0;
    overflow: hidden;
}

.light {
    position: absolute;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    pointer-events: none; /* To allow mouse events to pass through */
    opacity: 0.5; /* Adjust as needed */
    transition: transform 0.1s ease-out;
}

.white-light {
    background-color: rgb(0, 0, 0);
    mix-blend-mode: screen; /* To blend white with black */
}

.gray-light {
    background-color: rgb(255, 255, 255);
    mix-blend-mode: difference; /* To blend gray with black */
}
